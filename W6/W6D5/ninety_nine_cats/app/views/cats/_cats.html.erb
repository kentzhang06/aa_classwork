<table>
  <thead>
    <tr><th colspan="2">Cat Info</th></tr>
  </thead>
  <tbody>
      <tr>
      <td>Cat Name</td>
      <td><%= cat.name %> </td>
      </tr>

      <tr>
      <td>Birth Date</td>
      <td><%= cat.birth_date %> </td>
      </tr>

      <tr>
      <td>Color</td>
      <td><%= cat.color %> </td>
      </tr>

      <tr>
      <td>Gender</td>
      <td><%= cat.sex %> </td>
      </tr>

      <tr>
      <td>Description</td>
      <td><%= cat.description %> </td>
      </tr>

  </tbody>
</table>
    <% if show == :index %>
        <a href="<%= cat_url(cat)%>"><%=cat.name%>'s Page</a>
    <% else %>
        <a href="<%= cats_url %>">All the cats</a>
    <% end %>
